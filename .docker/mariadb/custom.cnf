[mysqld]
# Configurações otimizadas para WordPress

# Tamanho máximo de pacotes (importante para uploads grandes)
max_allowed_packet = 128M

# Performance - Buffer Pool
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Performance - Query Cache (desabilitado no MySQL 8+, mas útil no MariaDB)
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M

# Performance - Threads
thread_cache_size = 8
max_connections = 100

# Performance - Tabelas temporárias
tmp_table_size = 64M
max_heap_table_size = 64M

# Performance - Join
join_buffer_size = 4M
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 8M

# Segurança
# Desabilitar LOCAL INFILE para prevenir ataques
local_infile = 0

# Log de queries lentas (útil para debug)
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2

# Charset padrão (importante para WordPress)
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

# Timezone
default_time_zone = '-03:00'

# Desabilitar DNS lookup
skip_name_resolve = 1

[client]
default_character_set = utf8mb4

[mysql]
default_character_set = utf8mb4
