{
    "name": "host-style/dokpress",
    "version": "1.0.0",
    "description": "WordPress environment using Dokploy",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Renato Rodrigues Jr",
            "email": "renato@hoststyle.com.br"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": "^8.4",
        "roots/wordpress": "*",
        "symfony/asset": "^7.2",
        "symfony/cache": "^7.2",
        "symfony/console": "^7.2",
        "symfony/dotenv": "^7.2",
        "symfony/filesystem": "^7.2",
        "symfony/http-foundation": "^7.2",
        "symfony/http-kernel": "^7.2",
        "symfony/process": "^7.2",
        "symfony/rate-limiter": "^7.2"
    },
    "extra": {
        "wordpress-install-dir": "public/wp-core/",
        "installer-paths": {
            "public/wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "public/wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "roots/wordpress-core-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php console dokpress:setup"
        ],
        "post-update-cmd": [
            "@post-install-cmd"
        ]
    }
}
